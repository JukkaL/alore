def GetStr(i)
  if i == 1
    return ""
  elif i == 2
    return "a"
  elif i == 3
    return "aapeli"
  elif i == 4
    return NarrowSubStr()
  elif i == 5
    return LongNarrowStr()
  elif i == 6
    return 1023
  elif i == 7
    return Chr(999)
  elif i == 8
    return Chr(800) + "hup" + Chr(801)
  elif i == 9
    return WideSubStr()
  elif i == 10
    return LongWideStr()
  end
end


const NumNewlineStr = 8


def GetNewlineStr(i, sep)
  if i == 1
    return sep
  elif i == 2
    return (Chr(300) + sep)[1:sep.length() + 1]
  elif i == 3
    -- Narrow string
    return "abc" + sep + "xyz"
  elif i == 4
    -- Narrow substring
    return ("abcde" + sep + "1234567890")[1:12]
  elif i == 5
    -- Long narrow substring
    return ("abcde" * 50 + sep + "abcdefg" * 50)[1:500]
  elif i == 6
    -- Wide string
    return Chr(300) + sep + Chr(400)
  elif i == 7
    -- Wide substring
    return ("abcde" + Chr(300) + sep + "xyz")[1:9]
  elif i == 8
    -- Long wide substring
    return ("abcde" * 50 + Chr(300) + sep + "abcdefg" * 50)[1:500]
  end
end


def NarrowSubStr()
  var s = ""
  for i in 32 to 256
    s += Chr(i)
  end
  s = s[19:200]
  if not IsSubStr(s) or IsWideStr(s)
    raise Exception("not substring")
  end
