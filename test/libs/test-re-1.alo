  end

  def testEscaping()
    AssertMatch("a\*", "a*", True)
    AssertMatch("a\*", "a+", False)
    AssertMatch("a\+", "a+", True)
    AssertMatch("a\+", "a*", False)
    AssertMatch("a\?", "a?", True)
    AssertMatch("a\?", "a+", False)

    AssertMatch("\(", "(", True)
    AssertMatch("\(", ")", False)
    AssertMatch("\)", ")", True)
    AssertMatch("\)", "(", False)
    AssertMatch("\[", "[", True)
    AssertMatch("\[", "]", False)
    AssertMatch("\]", "]", True)
    AssertMatch("\]", "[", False)
    AssertMatch("\|", "|", True)
    AssertMatch("\|", "+", False)
    AssertMatch("\{", "{", True)
    AssertMatch("\{", "}", False)
