    AssertMatch("(a|bb){2}$", "bb", False)
    AssertMatch("(a|bb){2}$", "aaa", False)

    AssertMatch("(a|bb){1,3}$", "a", True)
    AssertMatch("(a|bb){1,3}$", "bbbb", True)
    AssertMatch("(a|bb){1,3}$", "bbbba", True)
    AssertMatch("(a|bb){1,3}$", "", False)
