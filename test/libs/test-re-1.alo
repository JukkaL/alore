  def testMatchCombined()
    AssertMatch("[a-z]*([0-9]+|(xx)+)$", "foo123", True)
    AssertMatch("[a-z]*([0-9]+|(xx)+)$", "7", True)
    AssertMatch("[a-z]*([0-9]+|(xx)+)$", "xx", True)
