    AssertMatch("a*b*c*$", "c", True)
    AssertMatch("a*b*c*$", "ab", True)
    AssertMatch("a*b*c*$", "aacccc", True)
    AssertMatch("a*b*c*$", "acccc", True)
    AssertMatch("a*b*c*$", "bc", True)
    AssertMatch("a*b*c*$", "abc", True)
