  def testBasicSearch()
    AssertSearch("", "", True)
    AssertSearch("", "f", True)
    AssertSearch("", "foo", True)
    AssertSearch("a", "a", True)
    AssertSearch("a", "ab", True)
    AssertSearch("a", "ba", True)
    AssertSearch("a", "bab", True)
    AssertSearch("a", "", False)
