  def testSearchAt()
    AssertSearchAt("a", "abc", 0, True)
    AssertSearchAt("a", "abc", 1, False)
    AssertSearchAt("a", "abc", 2, False)
    AssertSearchAt("a", "abc", 3, False)
    AssertSearchAt("a", "abc", 300, False)

    AssertSearchAt("\u1234?", "\u1234", 0, True)
